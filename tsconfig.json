{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "declaration": true,
    "baseUrl": "./packages",
    "paths": {
      "@op/common": ["common"]
    }
  },
  "exclude": ["**/node_modules", "**/dist", "**/__tests__/*"]
}
